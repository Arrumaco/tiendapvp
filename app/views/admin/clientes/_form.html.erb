<div class="clearfix">
  <div class="left" data-hook="admin_cliente_form_left">
    <%= f.field_container :nombre do %>
      <%= f.label :nombre, t(:nombre) %> <span class="required">*</span><br />
      <%= f.text_field :nombre, :class => 'fullwidth title'  %>
      <%= f.error_message_on :nombre %>
    <% end %>

    <%= f.field_container :razon_social do %>
      <%= f.label :razon_social, t(:razon_social) %> <span class="required">*</span><br />
      <%= f.text_field :razon_social, :class => 'fullwidth title'  %>
      <%= f.error_message_on :razon_social %>
    <% end %>

    <%= f.field_container :rif do %>
      <%= f.label :rif, t(:rif) %> <span class="required">*</span><br />
      <%= f.text_field :rif, :class => 'fullwidth title'  %>
      <%= f.error_message_on :rif %>
    <% end %>

    <%= f.field_container :user_id do %>
      <%= f.label :user_id, t(:user_id) %> <span class="required">*</span><br />
      <%= f.collection_select(:user_id, @users, :id, :email, {:include_blank => true}, {'style' => 'width:200px'}) %>
      <%= f.error_message_on :user_id %>
    <% end %>

  </div>

</div>

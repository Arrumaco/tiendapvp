<div class="clearfix">
  <div class="left" data-hook="admin_vendor_form_left">
    <%= f.field_container :nombre do %>
      <%= f.label :nombre, t(:nombre) %> <span class="required">*</span><br />
      <%= f.text_field :nombre, :class => 'fullwidth title'  %>
      <%= f.error_message_on :nombre %>
    <% end %>

    <%= f.field_container :razon_social do %>
      <%= f.label :razon_social, t(:razon_social) %> <span class="required">*</span><br />
      <%= f.text_field :razon_social, :class => 'fullwidth title'  %>
      <%= f.error_message_on :razon_social %>
    <% end %>

    <%= f.field_container :rif do %>
      <%= f.label :rif, t(:rif) %> <span class="required">*</span><br />
      <%= f.text_field :rif, :class => 'fullwidth title'  %>
      <%= f.error_message_on :rif %>
    <% end %>

    <%= f.field_container :contacto do %>
      <%= f.label :contacto, t(:contacto) %> <span class="required">*</span><br />
      <%= f.text_field :contacto, :class => 'fullwidth title'  %>
      <%= f.error_message_on :contacto %>
    <% end %>

    <%= f.field_container :email do %>
      <%= f.label :email, t(:email) %> <span class="required">*</span><br />
      <%= f.text_field :email, :class => 'fullwidth title'  %>
      <%= f.error_message_on :email %>
    <% end %>      
  </div>

  <div class="right" data-hook="admin_vendor_form_right">
    <%= f.field_container :direccion do %>
      <%= f.label :direccion, t(:direccion) %> <br />
      <%= f.text_area :direccion, {:cols => 60,:class => 'fullwidth'}  %>
      <%= f.error_message_on :direccion %>
    <% end %>
    <%= f.field_container :direnvio do %>
      <%= f.label :direnvio, t(:direnvio) %> <br />
      <%= f.text_area :direnvio, {:cols => 60, :rows => 2, :class => 'fullwidth'} %>
      <%= f.error_message_on :direnvio %>
    <% end %>
    <%= f.field_container :telefono1 do %>
      <%= f.label :telefono1, t(:telefono1) %> <br />
      <%= f.text_field :telefono1, :class => 'fullwidth title'  %>
      <%= f.error_message_on :telefono1 %>
    <% end %>

    <%= f.field_container :user_id do %>
      <%= f.label :user_id, t(:user_id) %> <span class="required">*</span><br />
      <%= f.collection_select(:user_id, @users, :id, :email, {:include_blank => true}, {'style' => 'width:200px'}) %>
      <%= f.error_message_on :user_id %>
    <% end %>

  </div>

</div>

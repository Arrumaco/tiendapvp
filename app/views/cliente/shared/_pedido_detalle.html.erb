  <ul class="sidebar" >
    <% unless @order.completed? %>
      <li<%== ' class="active"' if current == 'Order Details' %>>
        <%= link_to t(:order_details), "/#{session[:rol_usuario]}/orders/#{@order.number}/edit" %>
      </li>
      <li<%== ' class="active"' if current == 'Customer Details' %>>
          <%= link_to t(:customer_details), "/#{session[:rol_usuario]}/orders/#{@order.number}/user" %>
      </li>
      <li<%== ' class="active"' if current == 'Shipments' %>>
         <%= link_to t(:shipment), @order.line_items.empty? || !@order.completed? ? 'javascript:$("form").submit();' : "/#{session[:rol_usuario]}/orders/#{@order.number}/shipments/#{@order.shipment}/edit" %>
      </li>
      <li<%== ' class="active"' if current == 'Adjustments' %>>
         <%= link_to t(:adjustments), @order.line_items.empty? || !@order.completed? ? 'javascript:$("form").submit();' : "/#{session[:rol_usuario]}/orders/#{@order.number}/adjustments" %>
      </li>
      <li<%== ' class="active"' if current == 'Payments' %>>
         <%= link_to t(:payment), @order.line_items.empty? || !@order.completed? ? 'javascript:$("form").submit();' : "/#{session[:rol_usuario]}/orders/#{@order.number}/payments/new" %>
      </li>

    <% else %>
      <li<%== ' class="active"' if current == 'Order Details' %>>
        <%= link_to t(:order_details), "/#{session[:rol_usuario]}/orders/#{@order.number}" %>
      </li>
      <li<%== ' class="active"' if current == 'Customer Details' %>>
        <%= link_to t(:customer_details), "/#{session[:rol_usuario]}/orders/#{@order.number}/user" %>
      </li>
      <li<%== ' class="active"' if current == 'Adjustments' %>>
         <%= link_to t(:adjustments), "/#{session[:rol_usuario]}/orders/#{@order.number}/adjustments" %>
      </li>
      <li<%== ' class="active"' if current == 'Payments' %>>
         <%= link_to t(:payments), "/#{session[:rol_usuario]}/orders/#{@order.number}/payments" %>
      </li>
      <li<%== ' class="active"' if current == 'Shipments' %>>
         <%= link_to t(:shipments), "/#{session[:rol_usuario]}/orders/#{@order.number}/shipments" %>
      </li>
      <li<%== ' class="active"' if current == 'Return Authorizations' %>>
         <%= link_to t(:return_authorizations), "/#{session[:rol_usuario]}/orders/#{@order.number}/return_authorizations" %>
      </li>
      <li<%== ' class="active"' if current == 'History' %>>
         <%= link_to t(:history), "/#{session[:rol_usuario]}/orders/#{@order.number}/history" %>
      </li>
    <% end %>
  </ul>


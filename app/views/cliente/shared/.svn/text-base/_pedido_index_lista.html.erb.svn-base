<tr>  
  <td><%= l (@show_only_completed ? order.completed_at : order.created_at).to_date %></td>
  <td><%= link_to order.number, "/#{session[:rol_usuario]}/orders/#{order.number}" %></td>
  <td><%= t("order_state.#{order.state.downcase}") %></td>
  <td><%= link_to t("payment_states.#{order.payment_state}"), "/#{session[:rol_usuario]}/orders/#{order.number}/payments" if order.payment_state %></td>
  <td><%= link_to t("shipment_states.#{order.shipment_state}"), "/#{session[:rol_usuario]}/orders/#{order.number}/shipments" if order.shipment_state %></td>
  <td><%= order.email %></td>
  <td><%= number_to_currency order.total %></td>
  <td class='actions' data-hook="admin_orders_index_row_actions">
    <%= link_to_edit_url "/#{session[:rol_usuario]}/orders/#{order.number}/edit", :title => "admin_edit_#{dom_id(order)}" %></td>
</tr>

